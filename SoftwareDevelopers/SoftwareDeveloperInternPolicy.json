{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeInstances",
                "s3:GetObject",
                "s3:ListBucket",
                "lambda:InvokeFunction",
                "lambda:ListFunctions",
                "cloudwatch:GetMetricData",
                "cloudwatch:ListMetrics",
                "dynamodb:GetItem",
                "dynamodb:Query",
                "cloudformation:DescribeStacks",
                "sns:ListTopics",
                "sqs:ListQueues"
            ],
            "Resource": "*"
        }
    ]
}
